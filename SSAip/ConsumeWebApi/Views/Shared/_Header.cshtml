@inject IHttpContextAccessor context

<div class="container-fluid fixed-top">
    <div class="container topbar bg-primary d-none d-lg-block">
    </div>
    <div class="container px-0">
        <nav class="navbar navbar-light bg-white navbar-expand-xl">
            <a href="@Url.Action("GetProduct", "Home")" class="navbar-brand">
                <h1 class="text-primary display-6">IT62 SPORT</h1>
            </a>
            <button class="navbar-toggler py-2 px-3" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                <span class="fa fa-bars text-primary"></span>
            </button>
            <div class="collapse navbar-collapse bg-white" id="navbarCollapse">
                <div class="navbar-nav mx-auto">
                    <a href="@Url.Action("GetProduct", "Home")" class="nav-item nav-link active">Home</a>
                    <a href="@Url.Action("GetProduct", "Shop")" class="nav-item nav-link">Shop</a>
                    <a href="shop-detail.html" class="nav-item nav-link">Shop Detail</a>
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Pages</a>
                        <div class="dropdown-menu m-0 bg-secondary rounded-0">
                            <a href="@Url.Action("GetProduct", "Shop")" class="nav-item nav-link">Shop</a>
                        </div>
                    </div>
                    <a href="contact.html" class="nav-item nav-link">Contact</a>
                </div>
                <div class="d-flex m-3 me-0">
                    <button class="btn-search btn border border-secondary btn-md-square rounded-circle bg-white me-4" data-bs-toggle="modal" data-bs-target="#searchModal">
                        <i class="fas fa-search text-primary"></i>
                    </button>
                    <a href="@Url.Action("Index","Cart")" class="position-relative me-4 my-auto">
                        <i class="fa fa-shopping-bag fa-2x"></i>
                        @{
                            var totalQuantity = context.HttpContext.Session.GetString("TotalQuantity");
                            int quantity = string.IsNullOrEmpty(totalQuantity) ? 0 : int.Parse(totalQuantity);
                        }
                        <span class="position-absolute bg-secondary rounded-circle d-flex align-items-center justify-content-center text-dark px-1" style="top: 5px; left: 15px; height: 20px; min-width: 20px;">
                            @quantity
                        </span>
                    </a>
                    <div class="dropdown">
                        <a href="#" class="my-auto dropdown-toggle" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fa fa-user fa-2x"></i>
                            @{
                                var userName = context.HttpContext.Session.GetString("userName");
                                if (!string.IsNullOrEmpty(userName))
                                {
                                    <span class="my-auto">@userName!</span>
                                }
                            }
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="userDropdown">
                            @if (context.HttpContext.Session.GetString("userID") != null)
                            {
                                <li><a class="dropdown-item" href="@Url.Action("Getorder", "orders", new { user_id = context.HttpContext.Session.GetString("userID") })">Đơn hàng</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Info", "account")">Cài đặt</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="@Url.Action("signout", "Login")">Đăng xuất</a></li>
                            }
                            else
                            {
                                <li><a class="dropdown-item" href="@Url.Action("Index", "Login")">Đăng nhập</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Index", "Register")">Đăng ký</a></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </div>
</div>
